{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <form method="post" class="container w-50" action="{{ path('app_login') }}">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
            autocomplete="email" required autofocus>
        <br>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
            required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <input type="hidden" name="_target_path" value="/home" />

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
        <br>
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
        <p><a href="{{ path('app_forgot_password_request')}}">Mot de passe oubli√© ?</a></p>
    </form>
    <div class="caroulix" id="second-caroulix" data-ax="caroulix" data-caroulix-indicators-enabled="true" data-caroulix-indicators-is-flat="true">
  <div class="caroulix-item">
    <img src="{{asset('images/863540.jpg')}}" alt="img1" />
  </div>
  <div class="caroulix-item">
    <img src="{{asset('images/2314739.jpg')}}" alt="img2" />
  </div>
  <div class="caroulix-item">
    <img src="{{asset('images/black-friday.jpg')}}" alt="img3" />
  </div>
</div>
</div>
{% endblock %}